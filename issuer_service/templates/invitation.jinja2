{% extends "base.jinja2" %}

{% block title %}Invitation{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <div class="container">
            <h1>Continue in your Wallet</h1>
        </div>
        <div class="container text-center">
            {% if timeout %}
            <p>This invitation is valid for {{ timeout / 60 }}min</p>
            {% endif %}
            <img src="data: image/png; base64, {{ qr_b64 }}" class="img-fluid object-fit-contain" style="max-width: 30%" alt="QR code"/>
        </div>
        <div class="container text-center">
            <a href="{{ invitation_url }}">LINK</a>
        </div>
        <div class="container bg-secondary-subtle">
            <p class="text-break font-monospace">{{ invitation_url }}</p>
        </div>
    </div>
{% endblock %}
